{
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.egg-info": true,
    "poetry.lock": true,
    "pyproject.tmp": true,
    "setup.py": true,
    ".*cache": true,
    ".install": true
  },
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/bin/pre-commit-run-hook-entry",
  "python.formatting.blackArgs": ["black"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/pre-commit-run-hook-entry",
  "python.linting.flake8Args": ["flake8"],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyPath": "${workspaceFolder}/.venv/bin/pre-commit-run-hook-entry",
  "python.linting.mypyArgs": ["mypy"],
  "python.venvPath": "${workspaceFolder}/.venv/",
  "restructuredtext.confPath": "",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.venv": true
  }
}
